        <mapped-name>jdbc/auditDS</mapped-name>
        <res-auth>Container</res-auth>
        <jndi-name>java:/jdbc/auditDS</jndi-name>
    </resource-ref>

    <resource-env-ref>
        <resource-env-ref-name>backbase/config</resource-env-ref-name>
        <jndi-name>java:/backbase/config</jndi-name>
    </resource-env-ref>

